		System.out.println("Enter the number of installments: ");
		Integer n = sc.nextInt();
		
		for (int i=1; i<=n; i++) {
			//ELABORAR A LÓGICA DE CÁLCULO DAS PARCELAS
		}
		
		//imprimir parcelas do contrato
		sc.close();
		
	}

}
